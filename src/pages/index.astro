---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PostCard from '@/components/PostCard.svelte';
import { getReadTime } from '@/lib/utils/readTime';
import { SITE } from '@/config';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredPosts = posts.filter((post) => post.data.featured).slice(0, 3);
const latestPosts = posts.filter((post) => !post.data.featured).slice(0, 5);

const projects = (await getCollection('projects'))
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 4);

const appearances = (await getCollection('appearances'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<Layout title="Welcome">
  <!-- 1. Hero Section -->
  <section
    class="flex flex-col-reverse md:flex-row items-center gap-8 sm:gap-12 lg:gap-16 mb-24 lg:mb-32"
  >
    <div class="flex-1 text-center md:text-left">
      <h1
        class="text-3xl sm:text-4xl lg:text-5xl 3xl:text-6xl font-black tracking-tight mb-4 text-foreground leading-[1.1]"
      >
        I'm {SITE.author}, developer and designer.
      </h1>
      <p
        class="text-base sm:text-lg lg:text-xl text-muted-foreground leading-relaxed mb-8 max-w-2xl mx-auto md:mx-0"
      >
        {SITE.homeHeroDescription}
      </p>
      <div class="flex flex-wrap justify-center md:justify-start gap-4 sm:gap-6">
        {
          Object.entries(SITE.social).map(([platform, link]) => (
            <a
              href={link}
              class="text-[10px] sm:text-xs font-bold uppercase tracking-widest text-muted-foreground hover:text-primary transition-all no-underline"
            >
              {platform}
            </a>
          ))
        }
      </div>
    </div>
    <div
      class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 3xl:w-72 3xl:h-72 rounded-2xl overflow-hidden border border-border shadow-xl shrink-0"
    >
      <img
        src="/profile_photo.png"
        alt={SITE.author}
        class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-out scale-105 hover:scale-100"
      />
    </div>
  </section>

  <div class="flex flex-col gap-24 lg:gap-32">
    <!-- 2. Featured Posts -->
    {
      featuredPosts.length > 0 && (
        <section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <h2 class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground">
              Featured
            </h2>
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70" />
            <a
              href="/posts"
              class="px-2 py-0.5 rounded-md text-[10px] sm:text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              View all
            </a>
          </div>
          <div class="grid gap-3 sm:gap-4">
            {featuredPosts.map((post) => (
              <PostCard client:load {post} readTime={getReadTime(post.body || '')} />
            ))}
          </div>
        </section>
      )
    }

    <!-- 3. Latest Posts -->
    <section>
      <div class="flex items-baseline justify-between mb-8 sm:mb-12">
        <h2
          class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground"
        >
          Latest Writing
        </h2>
        <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
        <a
          href="/posts"
          class="px-2 py-0.5 rounded-md text-[10px] sm:text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
          >Archive</a
        >
      </div>
      <div class="grid gap-3 sm:gap-4">
        {
          latestPosts.map((post) => (
            <PostCard client:load {post} readTime={getReadTime(post.body || '')} />
          ))
        }
      </div>
    </section>

    <!-- 4. Projects -->
    <section>
      <div class="flex items-baseline justify-between mb-8 sm:mb-12">
        <h2
          class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground"
        >
          Projects
        </h2>
        <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
        <a
          href="/projects"
          class="px-2 py-0.5 rounded-md text-[10px] sm:text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
          >All Projects</a
        >
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
        {
          projects.map((project) => {
            const isExternal = project.data.directLink;
            const projectUrl = isExternal ? project.data.link : `/projects/${project.id}`;
            const target = isExternal ? '_blank' : '_self';

            return (
              <article class="flex flex-col h-full p-6 rounded-2xl bg-secondary/30 border border-border/50 hover:bg-secondary/50 hover:border-border transition-all duration-300 group">
                <div class="flex-1">
                  <a
                    href={projectUrl}
                    target={target}
                    rel={isExternal ? 'noopener noreferrer' : undefined}
                    class="no-underline"
                  >
                    <h3 class="text-lg sm:text-xl font-bold leading-tight mb-3 group-hover:text-primary transition-colors">
                      {project.data.title}
                    </h3>
                  </a>

                  {project.data.types && project.data.types.length > 0 && (
                    <div class="flex flex-wrap gap-1.5 mb-3">
                      {project.data.types.map((type) => (
                        <span
                          class={`inline-flex items-center px-2 py-0.5 rounded text-[11px] font-semibold uppercase tracking-wide ${
                            type === 'commercial'
                              ? 'bg-primary/10 text-primary border border-primary/20'
                              : type === 'open-source'
                                ? 'bg-green-500/10 text-green-600 dark:text-green-400 border border-green-500/20'
                                : 'bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20'
                          }`}
                        >
                          {type === 'open-source' ? 'Open Source' : type}
                        </span>
                      ))}
                    </div>
                  )}

                  <p class="text-sm text-muted-foreground leading-relaxed mb-4">
                    {project.data.description}
                  </p>

                  <div class="flex flex-wrap gap-2 mb-4">
                    {project.data.tags.slice(0, 3).map((tag) => (
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-background border border-border text-muted-foreground">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>

                <div class="flex items-center gap-3 pt-4 border-t border-border/50">
                  <a
                    href={projectUrl}
                    target={target}
                    rel={isExternal ? 'noopener noreferrer' : undefined}
                    class="inline-flex items-center gap-2 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
                  >
                    {isExternal ? 'Visit Site' : 'View Details'}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <>
                        <path d="M7 7h10v10" />
                        <path d="M7 17 17 7" />
                      </>
                    </svg>
                  </a>

                  {project.data.github && (
                    <a
                      href={project.data.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="ml-auto inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors no-underline"
                      aria-label={`GitHub repository for ${project.data.title}`}
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                        <path d="M9 18c-4.51 2-5-2-7-2" />
                      </svg>
                      GitHub
                    </a>
                  )}
                </div>
              </article>
            );
          })
        }
      </div>
    </section>

    <!-- 5. Talks / Appearances -->
    <section>
      <div class="flex items-baseline justify-between mb-8 sm:mb-12">
        <h2
          class="text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground"
        >
          Talks & Appearances
        </h2>
        <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
        <a
          href="/appearances"
          class="px-2 py-0.5 rounded-md text-[10px] sm:text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
          >More</a
        >
      </div>
      <div class="space-y-4 sm:space-y-6">
        {
          appearances.map((item) => (
            <a
              href={item.data.link}
              class="flex items-center justify-between py-3 group no-underline transition-all hover:translate-x-1"
            >
              <div class="flex flex-col">
                <span class="text-[9px] sm:text-[10px] font-bold uppercase tracking-widest text-muted-foreground mb-1">
                  {item.data.event}
                </span>
                <span class="font-bold text-sm sm:text-base text-foreground group-hover:text-primary transition-colors leading-tight">
                  {item.data.title}
                </span>
              </div>
              <span class="text-[11px] sm:text-xs font-medium text-muted-foreground tabular-nums">
                {item.data.date.getFullYear()}
              </span>
            </a>
          ))
        }
      </div>
    </section>
  </div>
</Layout>
