---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Breadcrumbs from '@/components/Breadcrumbs.svelte';
import { SITE } from '@/config';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Projects">
  <Breadcrumbs items={[{ name: 'Projects', href: '/projects' }]} />

  <div class="mb-12 sm:mb-16 lg:mb-24">
    <h1
      class="text-3xl sm:text-4xl lg:text-5xl 3xl:text-6xl font-black tracking-tight text-foreground leading-[1.1]"
    >
      Projects
    </h1>
    <p class="mt-4 text-base sm:text-lg lg:text-xl text-muted-foreground max-w-2xl leading-relaxed">
      {SITE.projectsDescription}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
    {
      projects.map((project) => {
        const isExternal = project.data.directLink;
        const projectUrl = isExternal ? project.data.link : `/projects/${project.slug}`;
        const target = isExternal ? '_blank' : '_self';

        return (
          <article class="flex flex-col h-full p-6 rounded-2xl bg-secondary/30 border border-border/50 hover:bg-secondary/50 hover:border-border transition-all duration-300 group">
            <div class="flex-1">
              <a
                href={projectUrl}
                target={target}
                rel={isExternal ? 'noopener noreferrer' : undefined}
                class="no-underline"
              >
                <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-3 group-hover:text-primary transition-colors">
                  {project.data.title}
                </h2>
              </a>

              {project.data.types && project.data.types.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mb-3">
                  {project.data.types.map((type) => (
                    <span
                      class={`inline-flex items-center px-2 py-0.5 rounded text-[11px] font-semibold uppercase tracking-wide ${
                        type === 'commercial'
                          ? 'bg-primary/10 text-primary border border-primary/20'
                          : type === 'open-source'
                            ? 'bg-green-500/10 text-green-600 dark:text-green-400 border border-green-500/20'
                            : 'bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20'
                      }`}
                    >
                      {type === 'open-source' ? 'Open Source' : type}
                    </span>
                  ))}
                </div>
              )}

              <p class="text-sm sm:text-base text-muted-foreground leading-relaxed mb-4">
                {project.data.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.tags.map((tag) => (
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-background border border-border text-muted-foreground">
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <div class="flex items-center gap-3 pt-4 border-t border-border/50">
              <a
                href={projectUrl}
                target={target}
                rel={isExternal ? 'noopener noreferrer' : undefined}
                class="inline-flex items-center gap-2 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
              >
                {isExternal ? 'Visit Site' : 'View Details'}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <>
                    <path d="M7 7h10v10" />
                    <path d="M7 17 17 7" />
                  </>
                </svg>
              </a>

              {project.data.github && (
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="ml-auto inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors no-underline"
                  aria-label={`GitHub repository for ${project.data.title}`}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                    <path d="M9 18c-4.51 2-5-2-7-2" />
                  </svg>
                  GitHub
                </a>
              )}
            </div>
          </article>
        );
      })
    }
  </div>
</Layout>
